generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  prompt    String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
}
